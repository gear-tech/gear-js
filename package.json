{
  "name": "gear-js",
  "private": true,
  "scripts": {
    "build:backend": "yarn workspaces foreach -ptR --from '{@gear-js/event-listener,@gear-js/api-gateway,@gear-js/data-storage,@gear-js/test-balance,@gear-js/wasm-compiler}' run build",
    "build:eventListener": "yarn workspace @gear-js/event-listener build",
    "build:apiGateway": "yarn workspace @gear-js/api-gateway build",
    "build:dataStorage": "yarn workspace @gear-js/data-storage build",
    "build:frontend": "yarn workspace @gear-js/frontend build",
    "build:testBalance": "yarn workspace @gear-js/test-balance build",
    "build:wasmCompiler": "yarn workspace @gear-js/wasm-compiler build",
    "run:front": "PORT=3001 yarn workspace @gear-js/frontend start",
    "run:eventListener": "yarn workspace @gear-js/event-listener start:dev",
    "run:backend": "yarn workspace @gear-js/api-gateway start:dev",
    "run:dataStorage": "yarn workspace @gear-js/data-storage start:dev",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "husky": "^7.0.2",
    "jest": "^27.4.7",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.1",
    "ts-jest": "^27.1.2"
  },
  "workspaces": [
    "website/api-gateway",
    "website/data-storage",
    "website/events-listener",
    "website/frontend",
    "website/test-balance",
    "website/wasm-compiler"
  ],
  "lint-staged": {
    "*.{js,css,md,ts,tsx,scss}": "prettier --write"
  },
  "packageManager": "yarn@3.1.1",
  "version": "0.0.2"
}
