{
  "name": "gear-js",
  "private": true,
  "author": "Gear Technologies",
  "license": "GPL-3.0",
  "repository": "git@github.com:gear-tech/gear-js.git",
  "engines": {
    "node": ">=20"
  },
  "bugs": {
    "url": "https://github.com/gear-tech/gear-js/issues"
  },
  "homepage": "https://github.com/gear-tech/gear-js",
  "keywords": [
    "gear",
    "gear-js"
  ],
  "packageManager": "yarn@4.10.3",
  "version": "1.0.0",
  "workspaces": [
    "apis/gear",
    "apis/vara-eth",
    "idea/gear/common",
    "idea/gear/explorer",
    "idea/gear/faucet",
    "idea/gear/frontend",
    "idea/gear/indexer-db",
    "idea/gear/meta-storage",
    "idea/gear/squid",
    "idea/vara-eth/frontend",
    "idea/vara-eth/indexer",
    "tools/cli",
    "tools/txwrapper",
    "utils/frontend-configs",
    "utils/gear-hooks",
    "utils/gear-ui",
    "utils/logger",
    "utils/util",
    "utils/vara-ui",
    "utils/wallet-connect"
  ],
  "scripts": {
    "clean": "lerna run clean --parallel && lerna clean -y && rm -rf node_modules",
    "clean:deps-only": "lerna clean -y && rm -rf node_modules",
    "build": "lerna run build",
    "build:gear-api": "lerna run build --scope @gear-js/api",
    "build:vara-eth-api": "lerna run build --scope @vara-eth/api",
    "build:gear-js-util": "lerna run build --scope gear-js-util",
    "build:gear-idea-common": "lerna run build --scope @gear-js/api --scope gear-idea-common",
    "build:gear-idea-explorer": "lerna run build --scope @gear-js/api --scope gear-idea-common --scope gear-idea-explorer --scope gear-idea-indexer-db",
    "build:gear-idea-faucet": "lerna run build --scope @gear-js/api --scope gear-idea-faucet --scope gear-idea-common",
    "build:gear-idea-meta-storage": "lerna run build --scope @gear-js/api --scope gear-idea-meta-storage --scope gear-idea-common",
    "build:gear-idea-squid": "lerna run build --scope @gear-js/api --scope gear-idea-indexer-db --scope gear-idea-squid",
    "build:gear-idea-backend": "lerna run build --scope @gear-js/api --scope gear-idea-common --scope gear-idea-explorer --scope gear-idea-faucet --scope gear-idea-indexer-db --scope gear-idea-meta-storage --scope gear-idea-squid",
    "build:gear-idea-frontend": "lerna run build --scope gear-idea-frontend --scope @gear-js/frontend-configs --scope @gear-js/ui --scope @gear-js/vara-ui --scope @gear-js/react-hooks --scope @gear-js/wallet-connect --scope @gear-js/api",
    "build:varaeth-idea-frontend": "lerna run build --scope varaeth-idea-frontend --scope @gear-js/frontend-configs --scope @vara-eth/api --scope @gear-js/api --scope gear-js-util",
    "build:varaeth-idea-indexer": "lerna run build --scope varaeth-idea-indexer",
    "build:ui": "lerna run build --scope @gear-js/ui --scope @gear-js/frontend-configs",
    "build:vara-ui": "lerna run build --scope @gear-js/vara-ui --scope @gear-js/frontend-configs",
    "build:hooks": "lerna run build --scope @gear-js/react-hooks --scope @gear-js/frontend-configs --scope @gear-js/api",
    "build:wallet-connect": "lerna run build --scope @gear-js/wallet-connect --scope @gear-js/frontend-configs --scope @gear-js/react-hooks --scope @gear-js/ui --scope @gear-js/vara-ui",
    "build:utils": "lerna run build --scope @gear-js/frontend-configs --scope @gear-js/ui --scope @gear-js/vara-ui --scope @gear-js/react-hooks --scope @gear-js/wallet-connect",
    "build:txwrapper": "lerna run build --scope @gear-js/txwrapper",
    "build:cli": "lerna run build --scope @gear-js/cli",
    "build:tools": "lerna run build --scope @gear-js/cli --scope @gear-js/txwrapper",
    "build:frontend-configs": "lerna run build --scope @gear-js/frontend-configs",
    "test:gear-api": "lerna run test --scope @gear-js/api",
    "test:vara-eth-api": "lerna run test --scope @vara-eth/api",
    "test:gear-js-util": "lerna run test --scope gear-js-util",
    "test:gear-idea-backend": "lerna run test --parallel --scope gear-idea-meta-storage --scope gear-idea-faucet",
    "test:txwrapper": "lerna run test --scope @gear-js/txwrapper",
    "test:ui": "lerna run test --scope @gear-js/ui",
    "test": "lerna run test --parallel",
    "lint": "npx eslint",
    "lint:fix": "npx eslint --fix",
    "bump:polkadot": "node scripts/update-deps.mjs polkadot && yarn install",
    "bump:gear-api": "node scripts/update-deps.mjs gear-api",
    "bump:gear-idea": "node scripts/update-gear-idea-version.mjs",
    "check:gear-idea-version": "node scripts/check-gear-idea-version.mjs"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.5",
    "@babel/plugin-transform-typescript": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "9.39.1",
    "@eslint/json": "0.14.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/babel__core": "^7.20.5",
    "@types/babel__preset-env": "^7.10.0",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-transition-group": "4.4.12",
    "babel-jest": "^30.2.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-plugin-storybook": "^10.1.11",
    "jest": "^30.2.0",
    "lerna": "^9.0.3",
    "prettier": "^3.6.2",
    "rollup": "^4.53.3",
    "rollup-plugin-typescript2": "^0.36.0",
    "sass": "^1.83.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "8.47.0",
    "vite": "^7.2.4"
  }
}
