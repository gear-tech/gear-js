{
  "name": "gear-js",
  "private": true,
  "author": "Gear Technologies",
  "license": "GPL-3.0",
  "repository": "git@github.com:gear-tech/gear-js.git",
  "engines": {
    "node": ">=20"
  },
  "bugs": {
    "url": "https://github.com/gear-tech/gear-js/issues"
  },
  "homepage": "https://github.com/gear-tech/gear-js",
  "keywords": [
    "gear",
    "gear-js"
  ],
  "packageManager": "yarn@4.6.0",
  "version": "1.2.0",
  "workspaces": [
    "apis/gear",
    "idea/gear/common",
    "idea/gear/explorer",
    "idea/gear/faucet",
    "idea/gear/frontend",
    "idea/gear/indexer-db",
    "idea/gear/meta-storage",
    "idea/gear/squid",
    "tools/cli",
    "tools/txwrapper",
    "utils/gear-hooks",
    "utils/gear-ui",
    "utils/vara-ui",
    "utils/wallet-connect",
    "utils/logger"
  ],
  "scripts": {
    "clean": "lerna run clean --parallel && lerna clean -y && rm -rf node_modules",
    "build:gear-api": "lerna run build --scope @gear-js/api",
    "build:gear-idea-explorer": "lerna run build --scope @gear-js/api --scope gear-idea-common --scope gear-idea-explorer --scope gear-idea-indexer-db",
    "build:gear-idea-faucet": "lerna run build --scope @gear-js/api --scope gear-idea-faucet",
    "build:gear-idea-meta-storage": "lerna run build --scope @gear-js/api --scope gear-idea-meta-storage",
    "build:gear-idea-squid": "lerna run build --scope @gear-js/api --scope gear-idea-indexer-db --scope gear-idea-squid",
    "build:gear-idea-backend": "lerna run build --scope @gear-js/api --scope gear-idea-common --scope gear-idea-explorer --scope gear-idea-faucet --scope gear-idea-indexer-db --scope gear-idea-meta-storage --scope gear-idea-squid",
    "build:gear-idea-frontend": "lerna run build --scope gear-idea-frontend --scope @gear-js/ui --scope @gear-js/vara-ui --scope @gear-js/react-hooks --scope @gear-js/wallet-connect --scope @gear-js/api",
    "build:ui": "lerna run build --parallel --scope @gear-js/ui --scope @gear-js/vara-ui",
    "build:hooks": "lerna run build --scope @gear-js/react-hooks",
    "build:wallet-connect": "lerna run build --scope @gear-js/wallet-connect --scope @gear-js/react-hooks --scope @gear-js/ui --scope @gear-js/vara-ui",
    "build:utils": "lerna run build --scope @gear-js/ui --scope @gear-js/vara-ui --scope @gear-js/react-hooks --scope @gear-js/wallet-connect",
    "build:txwrapper": "lerna run build --scope @gear-js/txwrapper",
    "build:cli": "lerna run build --scope @gear-js/cli",
    "build:tools": "lerna run build --scope @gear-js/cli --scope @gear-js/txwrapper",
    "build:all": "lerna run build",
    "test:gear-api": "lerna run test --scope @gear-js/api",
    "test:gear-idea-backend": "lerna run test --parallel --scope gear-idea-meta-storage --scope gear-idea-faucet",
    "test:txwrapper": "lerna run test --scope @gear-js/txwrapper",
    "test:ui": "lerna run test --scope @gear-js/ui",
    "test": "lerna run test --parallel",
    "lint": "npx eslint",
    "lint:fix": "npx eslint --fix",
    "bump:polkadot": "node scripts/update-polkadot.mjs",
    "bump:gear-idea": "node scripts/update-gear-idea-version.mjs",
    "check:gear-idea-version": "node scripts/check-gear-idea-version.mjs"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/plugin-transform-typescript": "^7.26.5",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@eslint/json": "^0.9.1",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-image": "^3.0.3",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/babel-core": "^6",
    "@types/babel__core": "^7",
    "@types/babel__preset-env": "^7",
    "@types/eslint-plugin-jsx-a11y": "^6",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/rollup-plugin-peer-deps-external": "^2.2.5",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitejs/plugin-react": "^4.3.4",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^29.7.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "eslint-plugin-storybook": "^0.11.2",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "lerna": "^8.1.9",
    "rollup": "^4.30.1",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.0.7",
    "vite-plugin-dts": "^4.5.0",
    "vite-plugin-node-polyfills": "^0.22.0",
    "vite-plugin-svgr": "^4.1.0"
  }
}
