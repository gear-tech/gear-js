{
  "name": "@gear-js/data-storage",
  "version": "0.0.5",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@gear-js/api": "^0.9.7",
    "@gear-js/interfaces": "1.0.0",
    "@nestjs/common": "^8.1.2",
    "@nestjs/config": "^1.0.3",
    "@nestjs/core": "^8.1.2",
    "@nestjs/microservices": "^8.1.2",
    "@nestjs/platform-express": "^8.1.2",
    "@nestjs/typeorm": "^8.0.2",
    "@polkadot/api": "^7.0.2",
    "kafkajs": "^1.15.0",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.1.0",
    "typeorm": "^0.2.38"
  },
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@babel/plugin-proposal-decorators": "^7.16.7",
    "@babel/plugin-transform-modules-commonjs": "^7.16.8",
    "@babel/plugin-transform-typescript": "^7.16.8",
    "@babel/preset-typescript": "^7.16.7",
    "@nestjs/cli": "^8.1.6",
    "@nestjs/schematics": "^8.0.4",
    "@nestjs/testing": "^8.1.2",
    "@types/express": "^4.17.11",
    "@types/jest": "^27.4.0",
    "@types/node": "^14.14.36",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "babel-jest": "^27.4.6",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "babel-preset-env": "^1.7.0",
    "babel-preset-jest": "^27.4.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^27.4.7",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^27.1.3",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "@babel/plugin-transform-modules-commonjs",
          "babel-plugin-transform-typescript-metadata",
          [
            "@babel/plugin-proposal-decorators",
            {
              "legacy": true
            }
          ]
        ],
        "presets": [
          "@babel/preset-typescript",
          "jest",
          [
            "env",
            {
              "modules": "commonjs",
              "targets": {
                "node": "current"
              },
              "useBuiltIns": true
            }
          ]
        ]
      }
    }
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-babel",
    "clearMocks": true,
    "moduleNameMapper": {
      "@polkadot/types/metadata": "<rootDir>/../../../node_modules/@polkadot/types/metadata/index.cjs",
      "@polkadot/hw-ledger-transports$": "<rootDir>/../../../node_modules/@polkadot/index.cjs",
      "@polkadot/hw-ledger-transports/(.*)$": "<rootDir>/../../../node_modules/@polkadot/hw-ledger-transports/$1.cjs",
      "@polkadot/hw-ledger$": "<rootDir>/../../../node_modules/@polkadot/hw-ledger/index.cjs",
      "@polkadot/hw-ledger/(.*)$": "<rootDir>/../../../node_modules/@polkadot/hw-ledger/$1.cjs",
      "@polkadot/keyring$": "<rootDir>/../../../node_modules/@polkadot/keyring/index.cjs",
      "@polkadot/keyring/(.*)$": "<rootDir>/../../../node_modules/@polkadot/keyring/$1.cjs",
      "@polkadot/networks$": "<rootDir>/../../../node_modules/@polkadot/networks/index.cjs",
      "@polkadot/networks/(.*?)(?:[.]cjs)?$": "<rootDir>/../../../node_modules/@polkadot/networks/$1.cjs",
      "@polkadot/util-(crypto)$": "<rootDir>/../../../node_modules/@polkadot/util-$1/index.cjs",
      "@polkadot/util-(crypto)/(.*?)(?:[.]cjs)?$": "<rootDir>/../../../node_modules/@polkadot/util-$1/$2.cjs",
      "@polkadot/util$": "<rootDir>/../../../node_modules/@polkadot/util/index.cjs",
      "@polkadot/util/(.*?)(?:[.]cjs)?$": "<rootDir>/../../../node_modules/@polkadot/util/$1.cjs",
      "@polkadot/wasm-crypto": "<rootDir>/../../../node_modules/@polkadot/wasm-crypto/index.cjs",
      "@polkadot/wasm-crypto/(.*?)(?:[.]cjs)?$": "<rootDir>/../../../node_modules/@polkadot/wasm-crypto/$1.cjs",
      "@polkadot/x-(bigint|global)$": "<rootDir>/../../../node_modules/@polkadot/x-$1/index.cjs",
      "@polkadot/x-(bigint|global)/(.*?)(?:[.]cjs)?$": "<rootDir>/../../../node_modules/@polkadot/x-$1/$2.cjs",
      "@polkadot/x-(fetch|randomvalues|textdecoder|textencoder|ws)$": "<rootDir>/../../../node_modules/@polkadot/x-$1/node.cjs",
      "@polkadot/x-(fetch|randomvalues|textdecoder|textencoder|ws)/(.*)$": "<rootDir>/../../../node_modules/@polkadot/x-$1/$2.cjs",
      "src/(.*)$": "<rootDir>/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.[tj]s$",
    "transform": {
      "\\.[tj]sx?$": "babel-jest",
      "node_modules/@polkadot": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!@polkadot|@babel/runtime/helpers/esm/)"
    ],
    "collectCoverageFrom": [
      "**/*.[tj]s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
