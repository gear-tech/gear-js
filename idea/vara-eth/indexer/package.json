{
  "name": "varaeth-idea-indexer",
  "private": true,
  "version": "0.0.1",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "rm -rf lib && npx tsc",
    "start": "node lib/main.js",
    "migration:generate": "yarn build && npx typeorm migration:generate -d lib/model/dataSource.js -o db/migrations/$NAME",
    "migration:run": "npx typeorm migration:run -d lib/model/dataSource.js",
    "serve": "node lib/api.js"
  },
  "dependencies": {
    "@gear-js/logger": "workspace:*",
    "@subsquid/evm-processor": "^1.27.3",
    "@subsquid/logger": "^1.4.0",
    "@subsquid/typeorm-store": "^1.5.1",
    "@vara-eth/api": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "pg": "8.16.3",
    "postgraphile": "^4.14.1",
    "reflect-metadata": "^0.2.2",
    "typeorm": "0.3.27",
    "viem": "2.40.0",
    "xxhash-addon": "^2.0.3"
  },
  "devDependencies": {
    "@types/cors": "^2"
  }
}
