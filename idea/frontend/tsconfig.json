{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // Custom
    "baseUrl": "src",
    "paths": {
      "api/*": ["./api/*"],
      "app/*": ["./app/*"],
      "entities/*": ["./entities/*"],
      "features/*": ["./features/*"],
      "hooks/*": ["./hooks/*"],
      "pages/*": ["./pages/*"],
      "shared/*": ["./shared/*"],
      "widgets/*": ["./widgets/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
