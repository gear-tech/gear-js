{
  "name": "@gear-js/data-storage",
  "version": "0.0.5",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\"src/**/*.ts\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\" \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\"test/**/*.ts\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config test/jest-e2e.json",
    "typeorm": "node --require ts-node/register ../../node_modules/typeorm/cli.js -d dist/data-source.js",
    "migration:generate": "yarn typeorm migration:generate",
    "migrate": "yarn typeorm migration:run",
    "migrate-undo": "yarn typeorm migration:revert"
  },
  "dependencies": {
    "@gear-js/api": "0.25.0",
    "@gear-js/common": "workspace:^",
    "@nestjs/common": "8.4.7",
    "@nestjs/config": "1.2.1",
    "@nestjs/core": "8.4.7",
    "@nestjs/microservices": "8.4.7",
    "@nestjs/platform-express": "8.4.7",
    "@nestjs/typeorm": "8.1.4",
    "@polkadot/api": "8.13.1",
    "kafkajs": "1.16.0",
    "pg": "8.7.3",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.5.6",
    "typeorm": "0.3.7"
  },
  "devDependencies": {
    "@babel/core": "7.18.9",
    "@babel/plugin-proposal-decorators": "7.18.9",
    "@babel/plugin-transform-modules-commonjs": "7.18.6",
    "@babel/plugin-transform-typescript": "7.18.8",
    "@babel/preset-typescript": "7.18.6",
    "@nestjs/cli": "8.2.8",
    "@nestjs/schematics": "8.0.11",
    "@nestjs/testing": "8.4.7",
    "@types/express": "4.17.13",
    "@types/jest": "27.5.2",
    "@types/js-yaml": "4.0.5",
    "@types/node": "14.18.22",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "babel-jest": "27.5.1",
    "babel-plugin-transform-typescript-metadata": "0.3.2",
    "babel-preset-env": "1.7.0",
    "babel-preset-jest": "27.5.1",
    "class-transformer": "0.5.1",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "3.4.1",
    "jest": "27.5.1",
    "js-yaml": "4.1.0",
    "prettier": "2.7.1",
    "supertest": "6.2.4",
    "ts-jest": "27.1.5",
    "ts-loader": "8.4.0",
    "ts-node": "10.9.1",
    "tsconfig-paths": "3.14.1",
    "typescript": "4.7.4"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-babel",
    "clearMocks": true,
    "collectCoverageFrom": [
      "**/*.[tj]s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!@polkadot|@babel/runtime/helpers/esm/)"
    ]
  }
}
