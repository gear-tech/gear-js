{
  "name": "@gear-js/api",
  "version": "0.16.0",
  "description": "A JavaScript library that provides functionality to connect GEAR Component APIs.",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "scripts": {
    "clean": "rm -rf lib",
    "test": "jest --runInBand",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "rollup --config rollup.config.js",
    "build:types": "tsc --p tsconfig.types.json",
    "build": "npm run clean && npm run build:cjs && npm run build:types && npm run build:esm",
    "prettier": "npx prettier --write src/*",
    "tslint": "tslint -p tsconfig.json",
    "codestyle": "npm run prettier && npm run tslint",
    "prepare": "npm run build"
  },
  "exports": {
    ".": {
      "import": "./lib/index.mjs",
      "require": "./lib/index.js"
    }
  },
  "license": "GPL-3.0",
  "peerDependencies": {
    "@polkadot/api": "^7.14.3",
    "rxjs": "^7.5.5"
  },
  "devDependencies": {
    "@babel/preset-env": "7.16.11",
    "@babel/preset-typescript": "7.16.7",
    "@types/jest": "27.4.1",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-jest": "27.5.1",
    "jest": "27.5.1",
    "tslint": "6.1.3",
    "@rollup/plugin-commonjs": "21.0.3",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.1.3",
    "@rollup/plugin-typescript": "8.3.1",
    "@typescript-eslint/eslint-plugin": "5.17.0",
    "@typescript-eslint/parser": "5.17.0",
    "eslint": "8.12.0",
    "prettier": "2.6.1",
    "rollup": "2.70.1",
    "typescript": "4.6.3"
  },
  "directories": {
    "using-examples": "using-examples",
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gear-tech/gear-js.git"
  },
  "keywords": [
    "gear"
  ],
  "author": "Gear Technologies",
  "bugs": {
    "url": "https://github.com/gear-tech/gear-js/issues"
  },
  "homepage": "https://github.com/gear-tech/gear-js/tree/master/api#readme"
}
