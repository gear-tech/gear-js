{
  "name": "@gear-js/api",
  "version": "0.22.0",
  "description": "A JavaScript library that provides functionality to connect GEAR Component APIs.",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "scripts": {
    "prebuild": "rm -rf lib && npm run create:errors",
    "test": "jest --runInBand",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "rollup --config rollup.config.js",
    "build:types": "tsc --p tsconfig.types.json",
    "build": "npm run build:cjs && npm run build:types && npm run build:esm",
    "prettier": "npx prettier --write src/*",
    "tslint": "tslint -p tsconfig.json",
    "codestyle": "npm run prettier && npm run tslint",
    "prepare": "npm run build",
    "create:errors": "ts-node dev/errors-types.ts"
  },
  "exports": {
    ".": {
      "import": "./lib/index.mjs",
      "require": "./lib/index.js"
    }
  },
  "license": "GPL-3.0",
  "peerDependencies": {
    "@polkadot/api": "^8.9.1",
    "@polkadot/wasm-crypto": "^6.1.1",
    "rxjs": "^7.5.5"
  },
  "devDependencies": {
    "@babel/plugin-transform-typescript": "7.18.4",
    "@babel/preset-env": "7.18.2",
    "@babel/preset-typescript": "7.17.12",
    "@rollup/plugin-commonjs": "22.0.0",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.3.0",
    "@rollup/plugin-typescript": "8.3.3",
    "@types/jest": "27.5.2",
    "@types/node": "^18.0.0",
    "@types/rollup-plugin-peer-deps-external": "2.2.1",
    "@typescript-eslint/eslint-plugin": "5.27.1",
    "@typescript-eslint/parser": "5.27.1",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-jest": "28.1.1",
    "eslint": "8.17.0",
    "jest": "28.1.1",
    "prettier": "2.6.2",
    "rollup": "2.75.6",
    "rollup-plugin-peer-deps-external": "2.2.4",
    "rollup-plugin-typescript2": "0.31.2",
    "ts-jest": "28.0.4",
    "ts-node": "^10.8.1",
    "tslint": "6.1.3",
    "typescript": "4.7.3"
  },
  "directories": {
    "using-examples": "using-examples",
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gear-tech/gear-js.git"
  },
  "keywords": [
    "gear"
  ],
  "author": "Gear Technologies",
  "bugs": {
    "url": "https://github.com/gear-tech/gear-js/issues"
  },
  "homepage": "https://github.com/gear-tech/gear-js/tree/master/api#readme"
}
