{
  "name": "@gear-js/api",
  "version": "0.8.16",
  "description": "A JavaScript library that provides functionality to connect GEAR Component APIs.",
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "build": "rm -rf lib types && tsc",
    "examples": "node lib/examples/index.js",
    "test": "jest",
    "prettier": "npx prettier --write src/* examples/*",
    "tslint": "tslint -p tslint -p tsconfig.json",
    "codestyle": "npm run prettier && npm run tslint",
    "prepare": "rm -rf lib types && npm run build",
    "test-meta": "npm run build && mocha examples/test-meta.js"
  },
  "license": "GPL-3.0",
  "peerDependencies": {
    "@polkadot/api": "^6.9.2",
    "rxjs": "^7.3.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@types/jest": "^27.0.3",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^27.4.2",
    "jest": "^27.4.3",
    "prettier": "^2.3.2",
    "tslint": "^6.1.3",
    "typescript": "^4.4.2"
  },
  "directories": {
    "example": "examples",
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gear-tech/gear-js.git"
  },
  "keywords": [
    "gear"
  ],
  "author": "Gear Technologies",
  "bugs": {
    "url": "https://github.com/gear-tech/gear-js/issues"
