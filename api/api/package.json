{
  "name": "@gear-js/api",
  "version": "0.9.3",
  "description": "A JavaScript library that provides functionality to connect GEAR Component APIs.",
  "type": "module",
  "main": "dist/cjs/src/index.cjs",
  "module": "dist/esm/src/index.js",
  "types": "dist/esm/src/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.cjs.json && tsc -p tsconfig.esm.json",
    "examples": "node lib/examples/index.js",
    "test:meta": "node lib/examples/test-meta.js",
    "prettier": "npx prettier --write src/* examples/*",
    "tslint": "tslint -p tslint -p tsconfig.json",
    "codestyle": "npm run prettier && npm run tslint",
    "prepare": "npm run build",
    "test-meta": "mocha examples/test-meta.js"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "license": "GPL-3.0",
  "peerDependencies": {
    "@polkadot/api": "^7.0.2",
    "rxjs": "^7.3.0"
  },
  "devDependencies": {
    "typescript": "^4.5.4",
    "mocha": "^9.1.1",
    "prettier": "^2.3.2",
    "tslint": "^6.1.3"
  },
  "directories": {
    "example": "examples",
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gear-tech/gear-js.git"
  },
  "keywords": [
    "gear"
  ],
  "author": "Gear Technologies",
  "bugs": {
    "url": "https://github.com/gear-tech/gear-js/issues"
  },
  "homepage": "https://github.com/gear-tech/gear-js/tree/master/api#readme"
}
