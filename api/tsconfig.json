{
  "compilerOptions": {
    "lib": ["es5", "es6", "es7", "esnext", "dom"],
    "target": "es6",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "pretty": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["src", "src/**/*.json"]
}
