{
  "extends": ["config:base"],
  "labels": ["dependencies"],
  "branchConcurrentLimit": 5,
  "branchPrefix": "renovate-",
  "ignorePaths": ["ansible/**", ".github/**", "**/Dockerfile"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "matchDepTypes": ["devDependencies"]
    },
    {
      "matchPaths": ["api/**"],
      "groupName": "api",
      "reviewers": ["osipov-mit"],
      "addLabels": ["api"]
    },
    {
      "matchPaths": ["idea/frontend/**"],
      "groupName": "idea-frontend",
      "reviewers": ["nikitayutanov"],
      "addLabels": ["frontend"]
    },
    {
      "matchPaths": [
        "idea/api-gateway/**",
        "idea/common/**",
        "idea/indexer/**",
        "idea/test-balance/**",
        "idea/voucher-indexer/**"
      ],
      "groupName": "idea-backend",
      "reviewers": ["osipov-mit"],
      "addLabels": ["backend"]
    },
    {
      "matchPaths": ["idea/tests/**"],
      "groupName": "idea-tests",
      "reviewers": ["osipov-mit"],
      "addLabels": ["tests"]
    },
    {
      "matchPaths": ["tools/cli/**"],
      "groupName": "tools",
      "reviewers": ["osipov-mit"],
      "addLabels": ["tools"]
    },
    {
      "matchPaths": ["utils/gear-ui/**", "utils/gear-hooks/**"],
      "groupName": "utils",
      "reviewers": ["nikitayutanov"],
      "addLabels": ["utils"]
    },
    {
      "matchPaths": ["./package.json"],
      "groupName": "repo",
      "reviewers": ["osipov-mit"]
    }
  ]
}
