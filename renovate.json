{
  "extends": ["config:base"],
  "labels": ["dependencies"],
  "branchPrefix": "renovate-",
  "ignorePaths": ["ansible/**", ".github/**"],
  "assignAutomerge": true,
  "packageRules": [
    {
      "matchPaths": ["api/**"],
      "groupName": "@gear-js/api",
      "reviewers": ["osipov-mit"],
      "automerge": true,
      "labels": ["api"]
    },
    {
      "matchPaths": ["website/frontend/**"],
      "groupName": "frontend",
      "reviewers": ["nikitayutanov", "aderrod94", "codev0"],
      "labels": ["frontend"],
      "automerge": true
    },
    {
      "matchPaths": [
        "website/api-gateway/**",
        "website/data-storage/**",
        "website/events-listener/**",
        "website/test-balance/**",
        "website/wasm-compiler/**"
      ],
      "groupName": "backend",
      "reviewers": ["osipov-mit"],
      "labels": ["backend"],
      "automerge": true
    },
    {
      "matchPaths": ["utils/**"],
      "groupName": "utils",
      "reviewers": ["osipov-mit"],
      "automerge": true,
      "labels": ["utils"]
    }
  ]
}
