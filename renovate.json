{
  "extends": ["config:base"],
  "labels": ["dependencies"],
  "branchConcurrentLimit": 5,
  "branchPrefix": "renovate-",
  "ignorePaths": ["ansible/**", ".github/**"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "matchDepTypes": ["devDependencies"]
    },
    {
      "matchPaths": ["api/**"],
      "groupName": "api",
      "reviewers": ["osipov-mit"],
      "addLabels": ["api"]
    },
    {
      "matchPaths": ["website/frontend/**"],
      "groupName": "idea-frontend",
      "reviewers": ["nikitayutanov", "aderrod94", "Pinkdesu"],
      "labels": ["frontend"]
    },
    {
      "matchPaths": [
        "website/api-gateway/**",
        "website/common/**",
        "website/data-storage/**",
        "website/events-listener/**",
        "website/test-balance/**",
        "website/wasm-compiler/**"
      ],
      "groupName": "idea-backend",
      "reviewers": ["osipov-mit", "Almazatun"],
      "labels": ["backend"]
    },
    {
      "matchPaths": ["website/tests/**"],
      "groupName": "idea-tests",
      "reviewers": ["osipov-mit", "Almazatun"],
      "labels": ["tests"]
    },
    {
      "matchPaths": ["utils/meta-cli/**"],
      "groupName": "utils",
      "reviewers": ["osipov-mit"],
      "labels": ["utils"]
    },
    {
      "matchPaths": ["utils/gear-ui/**", "utils/gear-hooks/**", "utils/create-gear-app/**"],
      "groupName": "utils",
      "reviewers": ["nikitayutanov"],
      "labels": ["utils"]
    },
    {
      "matchPaths": ["apps/**"],
      "groupName": "apps",
      "reviewers": ["nikitayutanov"],
      "labels": ["apps"]
    }
  ]
}
